						</div>-->
					</div>
					<div class="event-description">
						<h3>{{ concert.group }}</h3>
						<h3>{{ concert.calendar_month }}, {{ concert.calendar_year }}</h3>
						<p>{{ concert.location }} | {{ concert.address }}</p>
					</div>
					<div class="action-area">
						<a class="button raised-button primary" href="{{ concert.slug }}.html"><i class="fa fa-ticket"></i> Tickets & Info</a>
					</div>
				</div>
			</div>
			{% endfor %}
		{% endcollection %}
