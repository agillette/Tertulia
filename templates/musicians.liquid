{% block content %} 
	<section class="page-intro" id="musicians" style="padding:10em 0 5em 0;background:#fff;border-bottom:1px solid #ddd;background:url(../assets/img/musicians-bg-new.jpg) center center no-repeat;background-size:cover;">
		<div class="row clearfix">
			<div class="column two-thirds push-sixth">
				<p class="large" style="color:#fff;text-shadow:0 0 1em #000">The most important ingredient of a Tertulia, and the most important ingredient of a chamber music performance, is the intimacy - the physical proximity of our artists and the audience. Not only do world-renowned musicians perform in the intimacy of our host restaurants, they share in the festive and convivial nature of the meal and evening as a whole.</p>
			</div>
		</div>
	</section>
	<section id="musician-results">
		<h2 class="section-title">2014-2015 Artists</h2>
		<!--<div class="row clearfix" id="controls">
			<div class="column full">
				<p>Browse by: <a class="drop-down" href="#">Season <i class="fa fa-caret-down"></i></a> <a class="drop-down" href="#">Name <i class="fa fa-caret-down"></i></a></p>
			</div>
		</div>-->
		<div class="row clearfix">
		{% collection "artists" by 50 order asc %}
		{% for artist in collection.items %}
			<div class="column one-quarter artist">
				<div class="card">
					<div class="media-area">
						<img src="{{ artist.headshot }}" alt="{{ artist.title }}" />
					</div>
					<div class="description">
						<h3>{{ artist.title }} <small>{{ artist.instrument }}</small></h3>
					</div>
					{{ assign cid = artist.concert_id }}
					{% collection "concerts" by 100 %}
					{% for concert in collection.items %}
					{% if concert.concert_id == artist.concert_id %}
					{% assign c_link = concert.slug %}
					{% endif %}
					{% endfor %}
					{% endcollection %}
					<a style="margin-top:0;" href="{{ c_link }}" class="button flat-button primary">At Tertulia</a><a style="margin-top:0;" href="{{ artist.website }}" class="button flat-button">Artist's Website</a>
				</div>
			</div>
			{% endfor %}
			{% endcollection %}
		</div>
	</section>
{% endblock %}
{% block scripts %}
{% endblock %}